%html
  %head
    %meta{'charset' => 'utf-8'}
    %title Testing: jquery.ajaxfilesupload.js
  %body
    %h1 Testing: jquery.ajaxfilesupload.js
    %form{'method' => 'post', 'enctype' => 'multipart/form-data', 'id' => 'awesome_form'}
      %input{'type' => 'file', 'id' => 'files', 'name' => 'files[]', 'multiple' => 'multiple'}
      %input{'type' => 'hidden', 'id' => 'secret_key', 'value' => 'im-the-secret'}
      %input{'type' => 'submit', 'value' => 'Test!'}
    #upload_status
    %table#filelist
      %tr
        %th Files
        %th State
    %h2 Testing: Upload must fail (404)
    %form{'method' => 'post', 'action' => '/fail', 'enctype' => 'multipart/form-data', 'id' => 'must_fail_form'}
      %input{'type' => 'file', 'id' => 'f_files', 'name' => 'files[]', 'multiple' => 'multiple'}
      %input{'type' => 'submit', 'value' => 'Must Fail!'}
    %script{'type' => 'text/javascript', 'src' => 'test/public/js/jquery-1.6.1.min.js'}
    %script{'type' => 'text/javascript', 'src' => 'jquery.ajaxfilesupload.js'}
    %script{'type' => 'text/javascript', 'src' => 'test/public/js/test.example.js'}
    %h2 Testing: Using ajax response (must alert() something)
    %form{'action' => 'alert', 'method' => 'post', 'enctype' => 'multipart/form-data', 'id' => 'alert_form'}
      %input{'type' => 'file', 'id' => 'files', 'name' => 'files[]', 'multiple' => 'multiple'}
      %input{'type' => 'submit', 'value' => 'Test!'}

